@page
@model FurnitureApp.Pages.Admin.CartItems.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_LayoutAdmin";
    ViewData["CurrentTab"] = "cartitems";
}

<h1>Edit</h1>

<h4>CartItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CartItem.Id" />
            <div class="form-group">
                <label asp-for="CartItem.Quantity" class="control-label"></label>
                <input asp-for="CartItem.Quantity" class="form-control" />
                <span asp-validation-for="CartItem.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CartItem.Selected" /> @Html.DisplayNameFor(model => model.CartItem.Selected)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
